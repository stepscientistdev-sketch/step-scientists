{
  "name": "step-monsters-backend",
  "version": "1.0.0",
  "description": "Backend API for Step Monsters game",
  "main": "src/server.ts",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc && node -e \"require('fs').cpSync('migrations', 'dist/migrations', {recursive: true})\" && node -e \"require('fs').cpSync('seeds', 'dist/seeds', {recursive: true})\"",
    "test": "jest",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "setup": "npm run migrate && npm run seed"
  },
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.27",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.10.7",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
